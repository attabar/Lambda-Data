<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<style>
    .account {
  width: 200px;
  border: 1px solid #ccc;
  margin: 10px;
}

.account-header {
  background-color: #f0f0f0;
  padding: 10px;
  cursor: pointer;
  display: flex;
  align-items: center;
}

.arrow-icon {
  margin-right: 10px;
}

.account-items {
  display: none;
}

.account-items ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.account-items li {
  padding: 5px;
}

</style>
<div class="account">
    <div class="account-header">
      <span class="arrow-icon">&#9654;</span> Account
    </div>
    <div class="account-items">
      <ul>
        <li>Item 1</li>
        <li>Item 2</li>
        <li>Item 3</li>
      </ul>
    </div>
  </div>  
  <script>
    $(document).ready(function () {
  $('.account-header').click(function () {
    const $arrow = $(this).find('.arrow-icon');
    const $accountItems = $(this).next('.account-items');
    if ($accountItems.is(':hidden')) {
      $arrow.html('&#9660;');
      $accountItems.slideDown();
    } else {
      $arrow.html('&#9654;');
      $accountItems.slideUp();
    }
  });
});

  </script>